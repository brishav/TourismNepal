<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brishavshakya.com.tourismnepal">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_rhino_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Controller.AppController">
        <activity android:name=".SplashActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity android:name=".SignUpActivity"/>
        <activity android:name=".DemoActivity"/>
        <activity android:name=".DistrictActivity"/>
        <activity android:name=".Demo"/>
        <activity android:name=".LocationActivity"/>
        <activity android:name=".DescriptionActivity"/>
        <activity android:name=".MainActivity"/>
    </application>



</manifest>